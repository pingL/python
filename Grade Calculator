__author__ = 'Atharv Sonwane'

#!/usr/bin/env python3
# The above is for Linux and OS X 

from time import sleep
import sys

repeat = True

sys.stdout.write('Welcome to ')
for i in range(0, 4):
        sys.stdout.write('.') 
        sleep(0.5)
        i += 1 

print('')
print('THE SUPREME GRADE CALCULATING BEING \n')
sleep(2)

def report(mark, grade, comment):
        print('Your mark: ' + str(mark) + '. Your grade: ' + grade + '. Comment: ' +
        comment)

while repeat:
    print('Hello, I am the almighty beign which assigns your grades. Be nice ' +
    'to me and you won\'t get an error!\n')
    sleep(3)

    mark = int(input('Enter your mark: '))
    print('')

    sys.stdout.write('Calculating')

    for i in range(0, 6):
        sys.stdout.write('.')
        sleep(0.5)
        i += 1

    print('\n')

    if mark >= 81:
        grade='A'
        report(mark, grade, 'Aim for an A*.')
    elif mark >= 75:
        grade='B'
        report(mark, grade, 'Average performance, but not good enough for an A')
    elif mark >= 69:
        grade = 'C'
        report(mark, grade, 'Poor ...')
    elif mark >= 63:
        grade = 'D'
        report(mark, grade, 'Very Bad. I expect much more from you')
    elif mark >= 58:
        grade = 'E'
        report(mark, grade,'Absolute rubbish. How can you get so bad? That is appauling')
    elif mark < 58:
        grade = 'U'
        report(mark, grade, 'Get out of my sight.')

    print('')
    
    repeat = 'penguin'
    while repeat == 'penguin':
        repeatstr = input("Do you want to go again? BEWARE! [Y/n] ")
        if repeatstr == 'Y' or repeatstr == 'y' or repeatstr == '':
            repeat = True
        elif repeatstr == 'N' or repeatstr == 'n':
            repeat = False
        elif repeatstr == repeat:
            print('Penguins are cool! Now, for your answer to the question... \n')
        else:
            print('Give a proper answer or FELL MY WRATH \n')

print('\n')
print('Thank-you for using The Supreme Grade Calculating Being')
print('Made by Atharv Sonwane and credits go to all those who have taught him and David Bailey who helped improve this programe')
